{
	"name": "domia-core",
	"version": "0.0.1",
	"description": "Domia core",
	"main": "index.js",
	"author": "kevin Castillo <kecoco16@gmail.com>",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "tsc && tsc-alias",
		"start": "node ./build/index.js",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --check \"src/**/*.ts\"",
		"format:fix": "prettier --write \"src/**/*.ts\"",
		"prepare": "husky",
		"dev": "nodemon --config nodemon.json",
		"db:generate": "drizzle-kit generate",
		"db:pull": "drizzle-kit pull",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push",
		"db:reset": "rm -rf local.db && rm -rf drizzle && yarn db:generate && yarn db:migrate",
		"scripts:checkEnv": "ts-node -r tsconfig-paths/register src/scripts/check-env.ts",
		"scripts:testWakeWord": "ts-node -r tsconfig-paths/register src/scripts/test-wake-word.ts",
		"scripts:testAudioRecording": "ts-node -r tsconfig-paths/register src/scripts/test-audio-recording.ts",
		"scripts:testStt": "ts-node -r tsconfig-paths/register src/scripts/test-stt.ts",
		"scripts:testLlm": "ts-node -r tsconfig-paths/register src/scripts/test-llm.ts",
		"scripts:testTts": "ts-node -r tsconfig-paths/register src/scripts/test-tts.ts",
		"scripts:testPlayAudio": "ts-node -r tsconfig-paths/register src/scripts/test-play-audio.ts"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@faker-js/faker": "^9.8.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/debug": "^4.1.12",
		"@types/node": "^22.15.29",
		"@typescript-eslint/eslint-plugin": "^8.33.1",
		"@typescript-eslint/parser": "^8.33.1",
		"drizzle-kit": "^0.31.1",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.1",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"nodemon": "^3.1.10",
		"prettier": "^3.5.3",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1"
	},
	"dependencies": {
		"better-sqlite3": "^11.10.0",
		"chalk": "^5.4.1",
		"debug": "^4.4.1",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.44.2",
		"drizzle-zod": "^0.8.2",
		"ollama": "^0.5.16",
		"zod": "^3.25.50"
	}
}
